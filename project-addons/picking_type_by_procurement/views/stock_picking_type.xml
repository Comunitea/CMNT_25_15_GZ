<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <delete id="picking_Type_by_procurement" model="ir.ui.view"/>
    <record id="picking_Type_by_procurement" model="ir.ui.view">
        <field name="name">stock.picking.type.kanban</field>
        <field name="model">stock.picking.type</field>
        <field name="inherit_id" ref="stock.stock_picking_type_kanban"/>
        <field name="arch" type="xml">
            <xpath expr='//field[@name="count_picking_waiting"]/../..' position="before">
                <div t-if="record.count_picking_done.raw_value &gt; 0" class="row">
                    <div class="col-xs-9">
                        <a name="get_action_picking_tree_done" type="object">
                            Done
                        </a>
                    </div>
                    <div class="col-xs-3">
                        <field name="count_picking_done"/>
                    </div>
                </div>
            </xpath>
         
            <xpath expr="//a[@name='%(stock.action_picking_form)d']" position="attributes">
                <attribute name="context"> {'planned_picking': True, 'default_group_id': procurement_group_id}</attribute>
            </xpath>
        </field>
    </record>
   
</odoo>
