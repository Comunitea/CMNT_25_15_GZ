<?xml version="1.0" encoding="utf-8" ?>
<odoo>
<record id="view_picking_type_form" model="ir.ui.view">
            <field name="name">Operation Types</field>
            <field name="model">stock.picking.type</field>
            <field name="inherit_id" ref="stock.view_picking_type_form" />
            <field name="arch" type="xml">
                <field name="warehouse_id" position="after">
                    <field name="app_integrated"/>
                </field>

                <xpath expr="//group/group/field[@name='default_location_dest_id']/../.." position="after">
                    <group string="APK Config" attrs="{'invisible': [('app_integrated', '=', False)]}">
                        <group>
                            <field name="default_location"/>
                            <field name="need_confirm_product_id"/>
                            <field name="need_location_id"/>
                            <field name="allow_change_location_id"/>
                            <field name="need_location_dest_id"/>
                            <field name="allow_change_location_dest_id"/>
                        </group>
                        <group>
                            <field name="need_loc_before_qty"/>
                            <field name="need_confirm_lot_id"/>
                            <field name="next_move_on_qty_done"/>
                            <field name="validate_on_finish"/>
                            <field name="icon"/>
                        </group>
                    </group>
                </xpath>
            </field>
        </record>
</odoo>