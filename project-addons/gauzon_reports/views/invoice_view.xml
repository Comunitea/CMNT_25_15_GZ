<?xml version="1.0" encoding="UTF-8"?>
<odoo>

        <record id="invoice_supplier_form_add_seq" model="ir.ui.view">
            <field name="name">account.invoice.supplier.form.add_seq</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account_by_business_line.invoice_supplier_form_inherit_add_business_line"/>
            <field name="arch" type="xml">
                <field name="invoice_line_ids" position="attributes">
                    <attribute name="context">{'business_line': main_analytic_tag_id, 'type': type, 'journal_id': journal_id, 'lines': invoice_line_ids}</attribute>
                </field>
            </field>
        </record>

        <record id="invoice_form_add_seq" model="ir.ui.view">
            <field name="name">account.invoice.form.add.seq</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account_by_business_line.invoice_form_inherit_add_business_line"/>
            <field name="arch" type="xml">
                <field name="invoice_line_ids" position="attributes">
                    <attribute name="context">{'type': type, 'journal_id': journal_id, 'default_invoice_id': id, 'lines': invoice_line_ids, 'business_line': main_analytic_tag_id}</attribute>
                </field>
            </field>
        </record>

        <record id="view_payment_mode_form_add_no_print" model="ir.ui.view">
            <field name="name">payment.mode.form.add_no_print</field>
            <field name="model">account.payment.mode</field>
            <field name="inherit_id" ref="account_payment_mode.account_payment_mode_form"/>
            <field name="arch" type="xml">
                <field name="payment_type" position="after">
                    <field name="no_print"/>
                </field>
            </field>
        </record>

        <record id="account_invoice_form_add_seq_so" model="ir.ui.view">
            <field name="name">account.invoice.form.add_seq_so</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account_invoice_line_sequence.account_invoice_form"/>
            <field name="arch" type="xml">
                <field name="sequence2" position="after">
                    <field name="sale_line_sequence"/>
                </field>
            </field>
        </record>

        <record id="view_company_form_add_lopd_text" model="ir.ui.view">
            <field name="name">res.company.form.add_lopd_text</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="base.view_company_form"/>
            <field name="arch" type="xml">
                <field name="report_footer" position="after">
                    <field name="lopd_text"/>
                </field>
            </field>
        </record>

</odoo>
