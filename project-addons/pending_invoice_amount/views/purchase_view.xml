<?xml version="1.0" encoding="utf-8"?>
<odoo>

  <record model="ir.ui.view" id="purchase_order_form">
    <field name="name">purchase.order.form.amt_to_invoice</field>
    <field name="model">purchase.order</field>
    <field name="inherit_id" ref="purchase.purchase_order_form"/>
    <field name="arch" type="xml">
      <xpath expr="//field[@name='order_line']/tree/field[@name='qty_invoiced']" position="after">
        <field name="amt_to_invoice" attrs="{'column_invisible': [('parent.state', 'not in', ['purchase', 'done'])]}"/>
      </xpath>
      <xpath expr="//field[@name='order_line']/form//field[@name='price_unit']" position="after">
        <field name="amt_to_invoice" attrs="{'column_invisible': [('parent.state', 'not in', ['purchase', 'done'])]}"/>/>
      </xpath>
    </field>
  </record>
</odoo>
