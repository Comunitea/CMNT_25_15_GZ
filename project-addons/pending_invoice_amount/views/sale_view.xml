<?xml version="1.0" encoding="utf-8"?>
<odoo>

  <record model="ir.ui.view" id="view_order_form">
    <field name="name">sale.order.form.amt_to_invoice</field>
    <field name="model">sale.order</field>
    <field name="inherit_id" ref="sale.view_order_form"/>
    <field name="arch" type="xml">
      <xpath expr="//field[@name='order_line']/tree/field[@name='qty_invoiced']" position="after">
        <field name="amt_to_invoice" attrs="{'column_invisible': [('parent.state', 'not in', ['sale', 'done'])]}"/>
      </xpath>
      <!--xpath expr="//field[@name='order_line']/form//field[@name='price_total']" position="after">
        <field name="amt_to_invoice" attrs="{'invisible': [('state', 'not in', ['sale', 'done'])]}"/>/>
      </xpath-->
    </field>
  </record>
</odoo>
