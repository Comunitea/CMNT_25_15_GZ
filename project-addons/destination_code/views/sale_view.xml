<?xml version="1.0"?>
<odoo>
    <data>
      

         <record id="view_order_form_dest_code" model="ir.ui.view">
            <field name="name">sale.order.form.gq</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale_stock.view_order_form_inherit_sale_stock"/>
            <field name="arch" type="xml">
                
                <field name="picking_policy" position="after">
                    <field name="destination_code_id"/>
                </field>
                <xpath expr="//field[@name='order_line']/form/group/group/field[@name='price_unit']" position="before">
                    <field name="destination_code_id" groups="sale_stock.group_route_so_lines" attrs="{'readonly': [('state', 'in', ('sale', 'done', 'cancel'))]}" options="{'no_create': True}"/>
                </xpath>
                <xpath expr="//field[@name='order_line']/tree/field[@name='price_unit']" position="before">
                    <field name="destination_code_id" groups="sale_stock.group_route_so_lines"
                           attrs="{'readonly': [('state', 'in', ['sale', 'done', 'cancel'])],
                           'column_invisible': [('parent.destination_code_id', '=', False)]}" options="{'no_create': True}"/>
                </xpath>
           </field>
        </record>
        
    </data>
</odoo>
