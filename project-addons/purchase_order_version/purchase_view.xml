<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="purchase_order_form_add_version_fields" model="ir.ui.view">
            <field name="name">purchase.order.form.add_version_fields</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <field name="company_id" position="after">
                     <button
                        name="action_previous_version"
                        string="Create version"
                        type="object"
                        icon="gtk-go-forward"
                        colspan="2"/>
                </field>
                <field name="shipped" colspan="after">
                    <field name="active"/>
                </field>
                <page string="Deliveries &amp; Invoices" position="after">
                    <page string="Versions">
                        <field name="version_ids" colspan="4" nolabel="1"/>
                    </page>
                </page>
            </field>
        </record>

        <record id="purchase_order_tree_add_version_fields" model="ir.ui.view">
            <field name="name">purchase.order.tree.add_version_fields</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_tree"/>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <field name="state" position="after">
                    <field name="purchase_version_id"/>
                </field>
            </field>
        </record>

        <record id="view_request_for_quotation_filter_add_version_fields" model="ir.ui.view">
            <field name="name">request.quotation.select.add_version_fields</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.view_request_for_quotation_filter"/>
            <field name="type">search</field>
            <field name="arch" type="xml">
                <field name="create_uid" position="after">
                    <field name="active"/>
                </field>
                <filter string="Expected Date" position="after">
                    <separator orientation="vertical"/>
                    <filter string="Orig. Version" icon="terp-accessories-archiver" domain="[]" context="{'group_by':'purchase_version_id'}"/>
                </filter>
            </field>
        </record>

        <record id="view_purchase_order_filter_add_version_fields" model="ir.ui.view">
            <field name="name">purchase.order.list.select.add_version_fields</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.view_purchase_order_filter"/>
            <field name="type">search</field>
            <field name="arch" type="xml">
                <field name="create_uid" position="after">
                    <field name="active"/>
                </field>
                <filter string="Expected Month" position="after">
                    <separator orientation="vertical"/>
                    <filter string="Orig. Version" icon="terp-accessories-archiver" domain="[]" context="{'group_by':'purchase_version_id'}"/>
                </filter>
            </field>
        </record>

    </data>
</openerp>
