<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="view_purchase_order_tree_add_active_field" model="ir.ui.view">
            <field name="name">purchase.order.tree.add_active_field</field>
            <field name="model">purchase.report</field>
            <field name="inherit_id" ref="purchase.view_purchase_order_tree"/>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <field name="location_id" position="after">
                    <field name="active" invisible="1"/>
                </field>
            </field>
        </record>

        <record id="view_purchase_order_search_add_active_field" model="ir.ui.view">
            <field name="name">report.purchase.order.search.add_active_field</field>
            <field name="model">purchase.report</field>
            <field name="inherit_id" ref="purchase.view_purchase_order_search"/>
            <field name="type">search</field>
            <field name="arch" type="xml">
                <field name="expected_date" position="after">
                    <field name="active"/>
                </field>
            </field>
        </record>

    </data>
</openerp>
