<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        
        <record id ="view_sale_order_add_no_picking_field" model="ir.ui.view">
            <field name="name">view.sale.order.add.no.picking.field</field>            
            <field name="model">sale.order</field>            
            <field name="type">form</field>            
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <field name="order_policy" position="after">
                    <field name="no_picking"/>
                </field>
                <separator string="Packings" position="replace"/>
                <field name="picking_ids" position="replace"/>
                
            </field>            
        </record>
        
        <record id ="view_stock_move_tree_add_address" model="ir.ui.view">
            <field name="name">view.stock.move.tree.add.address</field>            
            <field name="model">stock.move</field>            
            <field name="type">tree</field>            
            <field name="inherit_id" ref="stock.view_move_tree_reception_picking"/>
            <field name="arch" type="xml">
                <field name="state" position="before">
                    <field name="warehouse_id"/>
                    <field name="address_id"/>
                </field>
                <field name="origin" position="replace">
                    <field name="origin_comp"/>
                </field>
            </field>            
        </record>
        
        <record id ="view_stock_move_search_add_address" model="ir.ui.view">
            <field name="name">view.stock.move.search.add.address</field>            
            <field name="model">stock.move</field>            
            <field name="type">search</field>            
            <field name="inherit_id" ref="stock.view_move_search_reception_outcoming_picking"/>
            <field name="arch" type="xml">
                <field name="prodlot_id" position="replace">
                    <field name="address_id"/>
                    <field name="warehouse_id" widget="selection"/>
                </field>
                <field name="origin" position="replace">
                    <field name="origin_comp"/>
                </field>
                <filter string="State" position="after">
                     <separator orientation="vertical"/>
                     <filter string="Destination address" name="groupby_address_id" icon="terp-gtk-jump-to-ltr" domain="[]" context="{'group_by':'address_id'}"/>
                     <filter string="Warehouse" name="groupby_warehouse_id" icon="terp-gtk-jump-to-ltr" domain="[]" context="{'group_by':'warehouse_id'}"/>
                </filter>
            </field>            
        </record>
        
        
        <record id ="view_picking_out_undo_form" model="ir.ui.view">
            <field name="name">stock.picking.out.undo.form</field>            
            <field name="model">stock.picking</field>            
            <field name="type">form</field>            
            <field name="inherit_id" ref="stock.view_picking_out_form"/>
            <field name="arch" type="xml">
                <button name="button_cancel" position="before">
                    <button name="action_undo" states="assigned,confirmed,draft" icon="gtk-no" type="object" string="Undo"/>
                </button>
            </field>            
        </record>
        
    </data>
</openerp>
