<odoo>

    <record id="view_picking_form" model="ir.ui.view">
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <field name="sale_id" position="replace"></field>
            <field name="origin" position="after">
                <field name="sale_id" invisible="1"/>
                <field name="sale_ids_count" invisible="1"/>
                <field name="sale_ids" widget="many2many_tags" 
                    attrs="{'invisible': [('sale_ids_count', '&lt;', 1)]}"/>
                
            </field>
            <xpath expr="//field[@name='move_lines']/tree/field[@name='name']" position="before">
                <button name="action_open_stock_move_workflow" class="btn btn-primary" string="â†³Open Workflow" type="object"
                            attrs="{'invisible': [('state', 'in', ('draft', 'cancel', 'done'))]}"
                            groups="stock.group_stock_adv_manager"
                            options="{&quot;warn&quot;: true}"/>
            </xpath>

        </field>
    </record>

</odoo>
