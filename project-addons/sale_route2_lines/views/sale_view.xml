<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_sale_order_manage" model="ir.ui.view">
            <field name="name">sale.order.form.manage</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='partner_shipping_id']" position="after">
                    <label for="route_id"/>
                    <div name="div_route_id">
                        <field name="route_id" class="oe_inline"
                        domain="[('warehouse_selectable', '=', True), ('sale_selectable', '=', True), ('warehouse_ids', 'in', warehouse_id)]"/>
                        <button type='object' class="fa fa-arrow-right oe_link"
                            name="apply_route_id" string="Apply route"
                            attrs="{'invisible':[('state','in',('cancel', 'done'))]}"/>
                    </div>
                </xpath>
            </field>
    </record>
</odoo>
