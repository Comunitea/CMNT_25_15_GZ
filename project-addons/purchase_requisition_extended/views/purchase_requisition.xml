<?xml version="1.0" encoding="utf-8"?>
<odoo>

        <record id="view_purchase_requisition_form_extended" model="ir.ui.view">
            <field name="name">purchase.requisition.form.extended</field>
            <field name="model">purchase.requisition</field>
            <field name="inherit_id" ref="purchase_requisition.view_purchase_requisition_form"/>
            <field name="arch" type="xml">
              
                <xpath expr="//header/button[@attrs=&quot;{'invisible': [('state', '!=', 'open')]}&quot;]" position="attributes">
                    <attribute name="attrs">{'invisible': ['|', ('group_id', '!=', False), ('state', '!=', 'open')]}</attribute>
                </xpath>
                <xpath expr="//header/button[@attrs=&quot;{'invisible': [('state', '!=', 'in_progress')]}&quot;]" position="attributes">
                    <attribute name="attrs">{'invisible': ['|', ('group_id', '!=', False), ('state', '!=', 'in_progress')]}</attribute>
                </xpath>
                <xpath expr="//button[@name='action_cancel']" position="attributes">
                    <attribute name="states">draft,in_progress,open</attribute>
                </xpath>
                <xpath expr="//button[@name='action_in_progress']" position="before">
                    <button name="generate_new_orders" type="object"
                        string="New Quotations"
                        attrs="{'invisible': ['|', ('state', '!=', 'in_progress'), ('group_id', '=', False)]}"/>

                </xpath>
                <xpath expr="//div[@name='button_box']" position="inside">
                    <button name="action_view_order_lines" type="object" class="oe_stat_button" icon="fa-list" attrs="{'invisible': [('state', '=', 'draft')]}">
                        <field name="order_lines_count" widget="statinfo" string="Lines"/>
                    </button>
                </xpath>

                <field name="vendor_id" position="after">
                    <field name="vendor_ids" attrs="{'invisible': [('group_id', '=', False)]}" widget="many2many_tags"/>
                    <field name="seller_ids" invisible="1">
                        <tree>
                            <field name="name"/>
                            <field name="product_id"/>
                            <field name="product_tmpl_id"/>
                        </tree>
                    </field>
                </field>
                <field name="origin" position="after">
                    <field name="group_id" invisible="0"/>
                    <field name="sale_id"/>
                </field>
                <xpath expr="//tree/field[@name='price_unit']" position="after">
                    <field name="price_subtotal"/>
                    <field name="pol_count"/>
                    <button name="action_view_order_lines" type="object" class="oe_stat_button" icon="fa-filter"/>
                    
                </xpath>
            </field>
        </record>

</odoo>
