<?xml version="1.0" encoding="UTF-8"?>

<openerp>
    <data>

        <record id="view_picking_form_add_warehouse" model="ir.ui.view">
            <field name="name">stock.picking.form.add.warehouse</field>
            <field name="model">stock.picking</field>
            <field name="type">form</field>
             <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="arch" type="xml">
               <field name="backorder_id" position="after">
                   <field name="warehouse_id" widget="selection"/>
               </field>
            </field>
        </record>

         <record id="view_picking_tree_add_warehouse" model="ir.ui.view">
            <field name="name">stock.picking.tree.add.warehouse</field>
            <field name="model">stock.picking</field>
            <field name="type">tree</field>
            <field name="inherit_id" ref="stock.vpicktree"/>
            <field name="arch" type="xml">
                <field name="backorder_id" position="before">
                    <field name="warehouse_id"/>
                </field>
            </field>
        </record>

        <record id="view_picking_internal_search_add_warehouse" model="ir.ui.view">
            <field name="name">stock.picking.search.add.warehouse</field>
            <field name="model">stock.picking</field>
            <field name="type">search</field>
            <field name="inherit_id" ref="stock.view_picking_internal_search"/>
            <field name="arch" type="xml">
                <field name="group_id" position="before">
                    <field name="warehouse_id" widget="selection"/>
                </field>
                <filter string="Procurement Group" position="after">
                    <filter string="Warehouse" icon="terp-stock_symbol-selection" domain="[]" context="{'group_by': 'warehouse_id'}"/>
                </filter>
            </field>
        </record>

    </data>
</openerp>
