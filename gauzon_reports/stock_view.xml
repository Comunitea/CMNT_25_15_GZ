<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>

        <record id="view_picking_out_form_add_seq" model="ir.ui.view">
            <field name="name">stock.picking.out.form.add_seq</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_out_form"/>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='move_lines']/tree/field[@name='product_id']" position="before">
                    <field name="sequence"/>
                </xpath>
            </field>
        </record>

        <record id="view_picking_in_form_add_seq" model="ir.ui.view">
            <field name="name">stock.picking.in.form.add_seq</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_in_form"/>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='move_lines']/tree/field[@name='product_id']" position="before">
                    <field name="sequence"/>
                </xpath>
            </field>
        </record>

        <record id="stock_partial_picking_form_add_supp_code" model="ir.ui.view">
            <field name="name">stock.partial.picking.form.add_supp_code</field>
            <field name="model">stock.partial.picking</field>
            <field name="inherit_id" ref="stock.stock_partial_picking_form"/>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <field name="currency"  position="after">
                    <field name="supplier_code"/>
                </field>
            </field>
        </record>

    </data>
</openerp>
