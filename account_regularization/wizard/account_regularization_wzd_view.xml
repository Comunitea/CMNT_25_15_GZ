<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="account_regularization_view_form" model="ir.ui.view">
            <field name="name">account.regularization.view.form</field>
            <field name="model">account.regularization.regularize</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Select period">
                    <field name="view_type" invisible="1"/>
                    <field name="fiscalyear_id" />
                    <field name="journal_id" />
                    <field name="period_id" domain="[('fiscalyear_id', '=', fiscalyear_id)]"/>
                    <field name="date_move" />
                    <group colspan="4" string="Select periods" attrs="{'invisible': [('view_type', '=', 'dates')]}">
                        <field name="period_ids" colspan="4" nolabel="1" domain="[('fiscalyear_id', '=', fiscalyear_id)]"/>
                    </group>
                    <group colspan="4" string="Select date to" attrs="{'invisible': [('view_type', '!=', 'dates')]}">
                        <field name="date_to"/>
                    </group>
                    <button special="cancel" string="Cancel" icon="gtk-cancel"/>
                    <button name="action_regularize" type="object" string="Execute regularization" icon="gtk-execute"/>
                </form>
            </field>
        </record>

        <act_window
            id="accounts_regularize"
            name="Accounts Regularization"
            view_mode="form"
            res_model="account.regularization.regularize"
            src_model="account.regularization"
            target="new"
            key2="client_action_multi"
            view_id="account_regularization_view_form"
            />

    </data>
</openerp>
